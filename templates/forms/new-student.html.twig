{% extends 'base.html.twig' %}

{% block title %}New Student{% endblock %}

{% block body %}
    {% include '/_partials/_header.html.twig' %}
    <div class="main-container">
        <div class="d-flex flex-wrap justify-content-between mx-auto" style="width: 70%">
            <div class="card w-100 mb-4 mx-auto">
                <div class="card-header">Add a New Student</div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                    <div class="mb-3">
                        {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.ethnicity, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.ethnicity, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.ethnicity) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.phone_number, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.phone_number, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.phone_number) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.preferred_name, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.preferred_name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.preferred_name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.gender, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.gender, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.gender) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.date_of_birth, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.date_of_birth, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.date_of_birth) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.neurodiversity, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.neurodiversity, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.neurodiversity) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.learning_style, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.learning_style, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.learning_style) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.nz_citizen, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nz_citizen, {'attr': {'class': 'form-checkbox'}}) }}
                        {{ form_errors(form.nz_citizen) }}
                    </div>

                    <div class="mb-3">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn form-submit-btn', 'style': 'background-color: var(--selma-blue); color: white;'}}) }}

                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    {% include '/_partials/_footer.html.twig' %}
{% endblock %}
