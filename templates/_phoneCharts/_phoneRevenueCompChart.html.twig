<div class="card mx-auto mb-3" style="width: 80%; height: 20%">
    <div class="card-header">Annual Revenue Comparison</div>
    <div class="card-body w-100">
        <div>
            <canvas id="phoneInvoiceChart"></canvas>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const labels = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
        const data = {
            labels: labels,
            datasets: [{
                label: 'Revenue 2024',
                data: [65, 59, 80, 81, 56, 55, 40],
                fill: false,
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1
            },
                {
                    label: 'Revenue 2023',
                    data: [28, 48, 40, 19, 86, 27, 90],
                    fill: false,
                    borderColor: 'rgb(255, 99, 132)',
                    tension: 0.1
                }]
        };

        const ctx = document.getElementById('phoneInvoiceChart').getContext('2d');

        const config = {
            type: 'line',
            data: data,
            options: {
                responsive: true,
                scales: {
                    x: {
                        display: true,
                        title: {
                            display: true,
                            text: 'Months'
                        }
                    },
                    y: {
                        display: true,
                        title: {
                            display: true,
                            text: 'Revenue (thousands)'
                        }
                    }
                }
            }
        };

        new Chart(ctx, config);
    });
</script>
