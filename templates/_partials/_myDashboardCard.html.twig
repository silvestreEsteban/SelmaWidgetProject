<div class="card" style="width: 100%; height: auto;">
    <h5 class="card-header w-100 border-bottom">My Dashboard</h5>
    <div class="card-body d-flex flex-row justify-content-between" style="height: 120px;">
        <img src="{{ app.user.profilePic }}" style="height: 100%" class="img rounded-circle" alt="profile-picture">
        <div class="d-flex flex-column user-div mt-4" style="width: 25%; height: 80%; font-size: 12px;">
            <p><i class="fa-solid fa-envelope"></i>  {{ app.user.email }}</p>
            <p><i class="fa-solid fa-lock"></i> <a href="#" class="text-decoration-none link-txt-color">Password/Security</a></p>
            <p><i class="fa-solid fa-right-from-bracket"></i><a href="{{ path('app_logout') }}" class="text-decoration-none link-txt-color">  Logout</a></p>
        </div>
        <div class="d-flex flex-column mt-3" style="width: 12%;">
            <span class="dashboard-icon">
            <h2 class="ms-2" style="color: var(--selma-blue)">{{ students|length }}</h2>
            <p style="font-size: 8px;">My Students</p>
            </span>
        </div>
        <div class="d-flex flex-column mt-3" style="width: 12%;">
            <span class="dashboard-icon">
            <h2 class="ms-3 yellow">0</h2>
            <p style="font-size: 8px;" class="ms-1">My Intakes</p>
            </span>
        </div>
        <div class="d-flex flex-column mt-3" style="width: 12%;">
            <span class="dashboard-icon">
            <h2 class="link-txt-color ms-3 purple">0</h2>
            <p style="font-size: 8px;" class="ms-2">My Tasks</p>
            </span>
        </div>
        <div class="d-flex flex-column mt-3" style="width: 12%;">
            <span class="dashboard-icon">
            <h2 class="text-danger ms-3">0</h2>
            <p style="font-size: 8px;">Overdue Tasks</p>
            </span>
        </div>

    </div>
</div>